.gameSection {
  @apply flex flex-col align-middle items-center justify-center;
}

.nextBtn {
  @apply border p-2 my-2 rounded-2xl hover:bg-sky-200 active:bg-sky-400
}

.answerBtnContainer {
  @apply flex justify-center;
}

.answerBtn {
  @apply nextBtn text-center cursor-pointer m-3;
}


.temp {
  @apply my-10
}

.temp-word {
  @apply border border-gray-900 p-3 m-2 rounded-2xl
}

.temp-word-cont {
  @apply flex flex-wrap justify-center
}